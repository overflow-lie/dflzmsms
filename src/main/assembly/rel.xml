<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>rel</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>vehicleinformation_rel</baseDirectory>
	<includeSiteDirectory>false</includeSiteDirectory>
	<fileSets>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/WEB-INF/classes</outputDirectory>
			<directory>target/classes/</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>log4j2.xml</exclude>
				<exclude>database.properties</exclude>
				<exclude>param_config.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/WEB-INF/classes</outputDirectory>
			<directory>src/main/assembly/configbuild/rel/</directory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
		    <directory>src/main/webapp</directory>
		    <outputDirectory>/</outputDirectory>
		    <excludes>
		        <exclude>WEB-INF/**</exclude>
		    </excludes>
		</fileSet>
		<fileSet>
			<outputDirectory>/WEB-INF</outputDirectory>
			<directory>target/vehicleinformation/WEB-INF</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
			    <exclude>classes/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/WEB-INF/lib</outputDirectory>
			<scope>runtime</scope>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>